{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^$config/(.*)$": "<rootDir>/../src/config/$1",
    "^$modules/(.*)$": "<rootDir>/../src/modules/$1",
    "^$services/(.*)$": "<rootDir>/../src/services/$1"
  }
}
